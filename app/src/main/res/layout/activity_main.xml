<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonWords"
        android:layout_width="163dp"
        android:layout_height="169dp"

        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"

        android:backgroundTint="#FF0000"
        android:text="Word Completion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEitan"
        app:layout_constraintStart_toEndOf="@+id/buttonColors"
        tools:ignore="MissingConstraints"></Button>

    <Button
        android:id="@+id/buttonColors"
        android:layout_width="163dp"
        android:layout_height="169dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#FF0000"
        android:text="Guess the Color"
        app:layout_constraintEnd_toStartOf="@+id/buttonWords"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonMemory"
        tools:ignore="MissingConstraints"></Button>

    <Button
        android:id="@+id/buttonEitan"
        android:layout_width="163dp"
        android:layout_height="169dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="24dp"

        android:backgroundTint="#FF0000"
        android:text="Identify the Item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_main"
        app:layout_constraintStart_toEndOf="@+id/ButtonMemory"

        tools:ignore="MissingConstraints"></Button>

    <TextView
        android:id="@+id/title_main"
        android:layout_width="289dp"
        android:layout_height="79dp"
        android:fontFamily="@font/coming_soon"
        android:text="Brain Storm"
        android:textAlignment="center"
        android:textColor="#D30000"
        android:textSize="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/total_score"
        android:layout_width="289dp"
        android:layout_height="79dp"
        android:fontFamily="@font/coming_soon"
        android:text="Total Score: "
        android:textAlignment="center"
        android:textColor="#D30000"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_main"
        app:layout_constraintVertical_bias="0.024" />

    <Button
        android:id="@+id/ButtonMemory"
        android:layout_width="163dp"
        android:layout_height="169dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#FF0000"
        android:text="Test Your Memory"
        app:layout_constraintEnd_toStartOf="@+id/buttonEitan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/title_main"
        tools:ignore="MissingConstraints"></Button>

    <ImageView
        android:id="@+id/SmsButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="48dp"
        android:src="@drawable/sms_pic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonColors"
        app:layout_constraintEnd_toStartOf="@+id/VidButton"/>
    />

    <ImageView
        android:id="@+id/VidButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SmsButton"
        app:layout_constraintTop_toBottomOf="@+id/buttonWords"
        android:src="@drawable/video_pic"/>
</androidx.constraintlayout.widget.ConstraintLayout>